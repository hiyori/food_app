<h2>New restaurant</h2>  
<%= form_for @restaurant, {url: restaurant_order_path} do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
      
  <%= f.label :name %>
  <%= f.text_field :name, id: "restaurant_magic", placeholder: "Savona", data: { autocomplete_restaurants_path: autocomplete_restaurants_url} %>
      
  <%= f.label :link %>
  <%= f.text_field :link, id: "email_magic", placeholder: "http://www.xyz.com" %>    
    
  <%= f.submit "Submit", class: "btn btn-success"%>
<% end %>
