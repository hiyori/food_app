<h1>Welcome</h1>
<h2>Login to Food website</h2>

<% flash.each do |key, value| %>
  <div class="alert alert-<%= key %>"><%= value %></div>
<% end %>

<div class="row">
  <div class="span6 offset3">
  <%= render 'shared/error_messages' %>
  </br>
  <%= form_for @user do |f| %>

    <%= f.label :email %>
    <%= f.text_field :email %>

    <%= f.submit "Send email", class: "btn btn-large btn-primary"%>
  <% end %>
  </div>
</div>
</br>
